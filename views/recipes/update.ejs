<h1>Edit a recipe</h1>

<form method="POST" action="/recipes/<%= recipe._id %> /update">

        <label>Name your recipe</label>
          <input type="text" name="name" placeholder="name" value="<%- recipe.name %>"> 
    
        <label for="ingredients">Ingredients List</label>
          <textarea name="ingredients"  value="<%- recipe.ingredients %>" rows='4' cols="50"> </textarea>
    
        <label for="instructions">Instructions</label>
          <textarea name="instructions"  rows='4' cols="50" placeholder="instructions" value="<%- recipe.instructions %>" > </textarea>
    
        <label>cooktime</label>
          <input type="number" name="cooktime" placeholder="cooktime" value="<%- recipe.cooktime %>">
    
        <label for="level">Level</label>
          <input list="level"> <datalist id="level" name="level" value="<%- recipe.level %>"> 
            <option value="Easy"> </option>
            <option value="Amateur Chef"> </option>
            <option value="Master Chef"> </option>
          </datalist>
    
          <label for="dishType">dishType</label>
          <input list="dishType"> <datalist id="dishType" name="dishType" value="<%- recipe.dishType %>"> 
            <option value="Breakfast"> </option>
            <option value="Dish"> </option>
            <option value="Snack"> </option>
            <option value="Drink"></option>
            <option value="Dessert"></option>
            <option value="Other"></option>
          </datalist>
    
          <label for="foodtypetag">foodtypetag</label>
          <input list="foodtypetag"> <datalist id="foodtypetag" name="foodtypetag" value="<%- recipe.foodtypetag %>"> 
            <option value="Vegan"> </option>
            <option value="Vegatarian"> </option>
            <option value="Gluten-Free"> </option>
          </datalist>
    
          <label for="nationaltypetag">nationaltypetag</label>
          <input list="nationaltypetag"> <datalist id="nationaltypetag" name="nationaltypetag" value="<%- recipe.nationaltypetag %>"> 
            <option value="Asian"> </option>
            <option value="TexMex"> </option>
            <option value="Italian"> </option>
          </datalist>
    
          <input type="file" name="imageUrl" accept="image/png, image/jpg" value="<%- recipe.imageUrl %>">
    
          <button> Submit </button>
    </form>
