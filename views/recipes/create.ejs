<h1>Create a new recipe</h1>


<div id="search-container"> 

<form method="POST" action="/recipes/create" enctype="multipart/form-data">

    <label>Name your recipe</label>
      <input type="text" name="name" placeholder="name"> 

    <label for="ingredients">Ingredients List</label>
      <textarea name="ingredients"  rows='4' cols="50"> </textarea>

    <label for="instructions">Instructions</label>
      <textarea name="instructions"  rows='4' cols="50" placeholder="instructions" > </textarea>

    <label>cooktime</label>
      <input type="number" id="cooktime" name="cooktime" placeholder="cooktime">

    <label for="level">Level</label>
     
        <select name="level" id="level">
        <option value="Easy"> Easy </option>
        <option value="Amateur Chef">Amateur Chef </option>
        <option value="Master Chef">Master Chef </option>
        </select>


      <label for="dishType">dishType</label>
      <input list="dishType"> <datalist id="dishType" name="dishType"> 
        <option value="Breakfast"> </option>
        <option value="Dish"> </option>
        <option value="Snack"> </option>
        <option value="Drink"></option>
        <option value="Dessert"></option>
        <option value="Other"></option>
      </datalist>

      <label for="foodtypetag">foodtypetag</label>
      <input list="foodtypetag"> <datalist id="foodtypetag" name="foodtypetag"> 
        <option value="Vegan"> </option>
        <option value="Vegatarian"> </option>
        <option value="Gluten-Free"> </option>
      </datalist>

      <label for="nationaltypetag">nationaltypetag</label>
      <input list="nationaltypetag"> <datalist id="nationaltypetag" name="nationaltypetag"> 
        <option value="Asian"> </option>
        <option value="TexMex"> </option>
        <option value="Italian"> </option>
      </datalist>

          <input type="file" name="imageUrl" accept="image/png, image/jpg">

      <button> Submit </button>
</form>

