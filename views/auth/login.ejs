
<h1>Login</h1>
  <form method="POST" action="/auth/login">
  <div class="row g-3 align-items-center">
    <div class="col-auto">
      <label>Username<input type="text" id="inputPassword6" class="form-control" name="username" required /></label>
    </div>
    <div class="col-auto">
      <label>Password<input type="password" class="form-control" aria-describedby="passwordHelpInline" name="password" required /></label>
    </div>
    <div class="col-auto">
      <span id="passwordHelpInline" class="form-text">
        Must be 8-20 characters long.
      </span>
    </div>
    <div class="col-auto">
    <button class="col-form-label form-control"  aria-describedby="passwordHelpInline" type="submit">Login</button>
  </div>
</div>
</form>


<% if (typeof errorMessage !== 'undefined') { %>
  <p style="color: red"><%= errorMessage %></p>
  <% } %>